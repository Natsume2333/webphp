body{
	margin:0;
	padding: 0;
	
}

.content{
	
	width:85%;
	height:26em;
	background: #fff;
	border-radius: 1em;
	box-shadow: 0 0 5px #888888;
	margin:0 auto;
	overflow: hidden;
	margin-top:8em;
}

.bg{
	background-image:url(../img/turntablebg.png); 
    background-repeat:no-repeat; 
    background-size:100% 100%;
    width:16em;
    height:16em;
    margin:0 auto;
    margin-top: 1em;
    overflow: hidden;
}

.radio{
	background-image:url(../img/turntableradio.png); 
    background-repeat:no-repeat; 
    background-size:100% 100%;
    width:4em;
    height:4em;
    margin:0 auto;
    margin-top:6em;
}

.noprize{
	position: absolute;
	width:2em;
	height:2em;
	margin-left: 11em;
	margin-top:6.5em;
	transform: rotate(88deg);
}

.prize{
	position: absolute;
	width:2em;
	height:2em;
}

.prize1{
	margin-left: 10.5em;
	margin-top:9em;
	transform: rotate(115deg);
}

.prize2{
	margin-left: 8.3em;
	margin-top:11em;
	transform: rotate(140deg);
}

.prize3{
	margin-left:5.5em;
	margin-top:11em;
	transform: rotate(150deg);
}

.prize4{
	margin-left: 3em;
	margin-top:9em;
	transform: rotate(240deg);
}

.prize5{
	margin-left: 3em;
	margin-top:6.5em;
	transform: rotate(275deg);
}

.prize6{
	margin-left: 4.5em;
	margin-top:4em;
	transform: rotate(320deg);
}

.prize7{
	margin-left: 7em;
	margin-top:3em;
	transform: rotate(0deg);
}

.prize8{
	margin-left: 9.5em;
	margin-top:4em;
	transform: rotate(45deg);
}

.statement{
	width:95%;
	margin: 0 auto;
	margin-top: 2em;
}

.statement ul{
	list-style: none;
	margin: 0;
	padding:0;
	margin-left: 1em;
	margin-top: 1em;
}